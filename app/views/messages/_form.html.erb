<% @message = Message.new %>
<%= form_for(@message, remote: true, format: :json) do |f| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
      <% @message.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%# f.text_area :text, :class => "form-control keyboard-enable"  %>

    <div class="icon-search-input">
        <div class="input-group col-md-12">
            <%= f.text_field :text, :class => "input-lg keyboard-enable", placeholder: "Write something...", autocomplete: "off"   %>
            <span class="input-group-btn">
              <%= f.hidden_field :recipient_id %>
              <%= hidden_field_tag :socket_id %>
             
              <%= button_tag(type: "submit", class: "btn btn-primary btn-md", name: "commit", value: "Send") do %>
                <span class="glyphicon glyphicon-send"></span>                      
              <% end %>
            </span>
        </div>
    </div>

  </div>


<% end %>
